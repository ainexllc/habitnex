# NextVibe Environment Variables Template

# ============================================================================
# CORE APPLICATION CONFIG
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ============================================================================
# AI CONFIGURATION
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================================================
# OPENTELEMETRY CONFIGURATION
# ============================================================================

# Service Identification
OTEL_SERVICE_NAME=nextvibe
OTEL_SERVICE_VERSION=1.0.0

# Core Features (true/false)
OTEL_ENABLE_TRACING=true
OTEL_ENABLE_METRICS=true
OTEL_ENABLE_LOGGING=true

# Sampling Configuration (0.0 to 1.0)
# Production: 0.1 (10%), Development: 1.0 (100%)
OTEL_SAMPLING_RATE=1.0

# Logging Configuration
# Options: none, error, warn, info, debug
OTEL_LOG_LEVEL=debug

# ============================================================================
# TELEMETRY EXPORTERS CONFIGURATION
# ============================================================================

# Generic OTLP Exporter (OpenTelemetry Protocol)
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otlp-endpoint.com/v1/traces
OTEL_EXPORTER_OTLP_HEADERS={"authorization":"Bearer your_token"}

# DataDog Configuration
DD_API_KEY=your_datadog_api_key
DD_SITE=datadoghq.com

# New Relic Configuration
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# Honeycomb Configuration
HONEYCOMB_API_KEY=your_honeycomb_api_key
HONEYCOMB_DATASET=nextvibe

# Vercel Analytics (automatically enabled when deployed on Vercel)
# VERCEL=1 (set automatically by Vercel)

# ============================================================================
# TELEMETRY CONFIGURATION EXAMPLES
# ============================================================================

# Development Configuration (Maximum Observability)
# OTEL_ENABLE_TRACING=true
# OTEL_ENABLE_METRICS=true
# OTEL_SAMPLING_RATE=1.0
# OTEL_LOG_LEVEL=debug

# Production Configuration (Optimized Performance)
# OTEL_ENABLE_TRACING=true
# OTEL_ENABLE_METRICS=true  
# OTEL_SAMPLING_RATE=0.1
# OTEL_LOG_LEVEL=info

# Minimal Configuration (Basic Monitoring)
# OTEL_ENABLE_TRACING=true
# OTEL_ENABLE_METRICS=false
# OTEL_SAMPLING_RATE=0.05
# OTEL_LOG_LEVEL=warn

# Testing Configuration (Disabled Telemetry)
# OTEL_ENABLE_TRACING=false
# OTEL_ENABLE_METRICS=false
# OTEL_SAMPLING_RATE=0.0

# ============================================================================
# MONITORING SERVICE INTEGRATION
# ============================================================================

# Example: DataDog Integration
# DD_API_KEY=abcdef123456789
# DD_SITE=datadoghq.com
# OTEL_ENABLE_TRACING=true
# OTEL_SAMPLING_RATE=0.1

# Example: New Relic Integration  
# NEW_RELIC_LICENSE_KEY=abc123def456ghi789
# OTEL_ENABLE_TRACING=true
# OTEL_ENABLE_METRICS=true

# Example: Honeycomb Integration
# HONEYCOMB_API_KEY=your_honeycomb_key
# HONEYCOMB_DATASET=nextvibe-production
# OTEL_SAMPLING_RATE=0.2

# Example: Custom OTLP Endpoint (e.g., Jaeger, Grafana)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:14268/api/traces
# OTEL_EXPORTER_OTLP_HEADERS={}

# ============================================================================
# BUSINESS METRICS CONFIGURATION
# ============================================================================

# Enable custom business metrics collection
ENABLE_BUSINESS_METRICS=true

# Metrics collection intervals (milliseconds)
METRICS_COLLECTION_INTERVAL=30000

# Real-time monitoring refresh rate
REALTIME_MONITORING_INTERVAL=5000

# ============================================================================
# SECURITY & COMPLIANCE
# ============================================================================

# Data retention policy (days)
TELEMETRY_DATA_RETENTION_DAYS=30

# PII scrubbing (enable/disable)
TELEMETRY_SCRUB_PII=true

# User opt-out support
TELEMETRY_ALLOW_OPTOUT=true

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Enable development console commands
TELEMETRY_DEV_CONSOLE=true

# Enable trace visualization
TELEMETRY_TRACE_VISUALIZATION=true

# Mock data generation for testing
TELEMETRY_GENERATE_MOCK_DATA=false

# Console output for debugging
TELEMETRY_CONSOLE_OUTPUT=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Batch size for telemetry exports
TELEMETRY_BATCH_SIZE=100

# Export timeout (milliseconds)
TELEMETRY_EXPORT_TIMEOUT=5000

# Memory limits for telemetry data
TELEMETRY_MAX_MEMORY_MB=50

# Queue size for telemetry events
TELEMETRY_QUEUE_SIZE=1000